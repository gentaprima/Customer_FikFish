<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/margin_low"
        android:background="@color/colorSmoothGrey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_totalharga" />


    <TextView
        android:textSize="12sp"
        android:layout_marginTop="@dimen/margin_activity"
        android:layout_marginStart="@dimen/margin_activity"
        android:layout_marginEnd="@dimen/margin_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tanggal Kirim"
        android:fontFamily="@font/capriola"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/edt_tanggal"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="@dimen/margin_activity"
        android:layout_marginEnd="@dimen/margin_activity"
        android:background="@drawable/bg_input"
        android:hint="Tanggal Kirim"
        tools:ignore="HardcodedText"
        android:paddingLeft="@dimen/margin_low"
        android:fontFamily="@font/capriola"
        android:textSize="14sp"
        />

    <Button
        android:id="@+id/btn_resume"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_activity"
        android:layout_marginEnd="@dimen/margin_activity"
        android:layout_marginTop="@dimen/margin_low"
        android:background="@drawable/bg_button"
        android:text="Submit"
        android:textColor="@color/colorWhite"
        android:fontFamily="@font/capriola"
        tools:ignore="HardcodedText"
        android:layout_marginBottom="@dimen/margin_activity"
        />
</LinearLayout>
